# Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# Google Gemini API Configuration
GOOGLE_API_KEY=your_google_gemini_api_key_here

# WebSearchAPI.ai Configuration
WEBSEARCH_API_KEY=your_websearch_api_key_here

# Search1API Configuration
SEARCH1_API_KEY=your_search1_api_key_here

# NewsData.io Configuration
NEWSDATA_API_KEY=your_newsdata_api_key_here

# ChromaDB Configuration (Optional)
CHROMA_DB_PATH=./db-minlm-v2
CHROMA_COLLECTION_NAME=student_docs

# Streamlit Configuration (Optional)
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Logging Configuration (Optional)
LOG_LEVEL=INFO
LOG_FILE=app.log

# RAG Pipeline Configuration (Optional)
MAX_CONTEXT_LENGTH=4000
SEARCH_RESULTS_LIMIT=5
RELEVANCE_THRESHOLD=0.3

# API Request Configuration (Optional)
REQUEST_TIMEOUT=30
MAX_RETRIES=3
